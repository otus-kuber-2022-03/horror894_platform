apiVersion: batch/v1
kind: Job
metadata:
  namespace: default
  name: chg-password-{{ name }}-job
spec:
  template:
    metadata:
      name: chg-password-{{ name }}-job
    spec:
      restartPolicy: Never
      ttlSecondsAfterFinished: 180
      containers:
      - name: mysql
        image: {{ image }}
        imagePullPolicy: IfNotPresent
        command:
        - /bin/sh
        - -c
        - "mysql -h {{ name }} -u ali -p{{ old }} {{ database }} -e \"alter user 'ali'@'%' IDENTIFIED BY '{{ new }}';\""
